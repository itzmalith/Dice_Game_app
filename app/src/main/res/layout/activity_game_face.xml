<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backeka2"
    android:orientation="vertical"
    tools:context=".GameFace"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="1080px"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:background="@drawable/backyy1">

            <LinearLayout
                android:layout_width="540px"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mywinsbanner"
                    android:paddingTop="10px"
                    android:background="@drawable/backyy2"
                    android:paddingLeft="40px"
                    android:layout_width="540px"
                    android:layout_height="100px"
                    android:text="Your Wins :"
                    android:textSize="50px"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    >
                </TextView>

                <TextView
                    android:id="@+id/compwinsbanner"
                    android:background="@drawable/backyy2"
                    android:paddingTop="10px"
                    android:paddingLeft="40px"
                    android:layout_width="540px"
                    android:layout_height="100px"
                    android:text="Computer's wins :"
                    android:textColor="@color/white"
                    android:textSize="50px"
                    android:textStyle="bold"></TextView>


            </LinearLayout>




            <LinearLayout
                android:layout_width="540px"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hscoreview"
                    android:background="@drawable/backyy2"
                    android:paddingTop="10px"
                    android:paddingLeft="300px"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="H : "
                    android:textColor="@color/white"
                    android:textSize="50px"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/cscoreview"
                    android:background="@drawable/backyy2"
                    android:paddingTop="10px"
                    android:paddingLeft="300px"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:text="C : "
                    android:textSize="50px"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    >
                </TextView>




        </LinearLayout>




    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="10px"
        android:text="Your results"
        android:textColor="@color/white"
        android:paddingLeft="100px"

        >
    </TextView>

    <!--Chayarupa-->

    <LinearLayout
        android:layout_marginLeft="60px"
        android:layout_marginTop="100px"
        android:layout_width="956px"
        android:layout_height="200px"
        android:padding="10px"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"
            android:maxWidth="50px">
        </ImageView>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"
            android:maxWidth="50px">
        </ImageView>
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"
            android:maxWidth="50px">
        </ImageView>
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"
            android:maxWidth="50px">
        </ImageView>
        <ImageView
            android:id="@+id/iv5"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"
            android:maxWidth="50px">
        </ImageView>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="100px"
        android:text="Computer's results"
        android:textColor="@color/white"
        android:paddingLeft="100px"

        >
    </TextView>

    <!--ANKA-->
    <LinearLayout
        android:layout_marginLeft="60px"
        android:layout_marginTop="100px"
        android:layout_width="956px"
        android:layout_height="210px"
        android:padding="10px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/computeroutput1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"


            >

        </ImageView>

        <ImageView
            android:id="@+id/computeroutput2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"
            android:gravity="center">

        </ImageView>
        <ImageView
            android:id="@+id/computeroutput3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px">

        </ImageView>
        <ImageView
            android:id="@+id/computeroutput4"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px">

        </ImageView>
        <ImageView
            android:id="@+id/computeroutput5"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30px">

        </ImageView>



    </LinearLayout>




    <!--boththam yugalaya-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_marginTop="100px"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btn1g"
            android:layout_width="150dp"
            android:layout_height="122px"
            android:layout_gravity="center"
            android:text="Throw">

        </Button>

        <Button
            android:id="@+id/btn2g"
            android:layout_width="150dp"
            android:layout_height="122px"
            android:layout_gravity="center"
            android:text="Score"

            ></Button>

        <Button
            android:id="@+id/btn3g"
            android:layout_width="150dp"
            android:layout_height="122px"
            android:layout_gravity="center"
            android:text="Tie break"
            android:visibility="invisible"

            ></Button>


    </LinearLayout>

    <TextView
        android:id="@+id/totalRolls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Re-roll count"
        android:textColor="@color/white"
        android:textSize="60px"
        android:layout_gravity="center"
        android:gravity="center"
        />

</LinearLayout>